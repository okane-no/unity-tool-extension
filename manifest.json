{
  "manifest_version": 3,
  "name": "Eventlink â†’ Unity Sync Helper",
  "version": "1.0",
  "description": "Detects Eventlink login and bridges it to UnityLeague.gg so you can import events and standings fast.",
  "permissions": [
    "cookies"
  ],
  "host_permissions": [
    "https://eventlink.wizards.com/*",
"*://*.wizards.com/"

  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://eventlink.wizards.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "externally_connectable": {
    "matches": ["http://localhost/*"]
  },
  "action": {
    "default_icon": {
      "128": "icon128.png"
    }
  }
}
